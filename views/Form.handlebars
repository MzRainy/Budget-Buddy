<div class="form-container position-relative shadow">
  <form action="{{#if isEditMode}}/expenses/edit/{{record._id}}?_method=PUT{{else}}/expenses/new{{/if}}" method="post"
    class="needs-validation" novalidate>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="row mb-4">
      <div class="col-2 ml-2">
        <small class="text-danger pl-2">*Required</small>
      </div>
      <div class="col-8">
        <h4 class="text-center font-weight-bold">Please enter your expenses</h4>
      </div>
    </div>
    <!--Display error message-->
    {{message}}
    <div class="form-group row ml-1 mr-4 justify-content-end">
      <label for="name" class="col-2 col-form-label ">Name</label>
      <input type="text" name="name" id="name" class="col-10 form-control" value="{{record.name}}" maxlength="8"
        required>
      <div class="valid-feedback col-10 p-0">
      Correct format！
      </div>
      <div class="invalid-feedback col-10 p-0">
        The name is required！
      </div>
    </div>
    <div class="form-group row ml-1 mr-4 justify-content-end">
      <label for="date" class="col-2 col-form-label">Date</label>
      {{!-- <input type="date" name="date" id="date" class="col-10 form-control" value="{{getInputDate record.date}}" --}}
        {{!-- min="2000-01-01" max="2030-01-01" required> --}}
      <div class="valid-feedback col-10 p-0">
        Correct format！
      </div>
      <div class="invalid-feedback col-10 p-0">
        The data is not filled in correctly, please verify all information is entered!
      </div>
    </div>
    <div class="form-group row ml-1 mr-4 justify-content-end">
      <label for="category" class="col-2 col-form-label">Category*</label>
      <select name="category" id="category" class="col-10 custom-select text-secondary" required>
        <option value="" selected>Categories</option>
        <option value="Household" {{isSelected record.category "Household"}}>Household</option>
        <option value="Transportation" {{isSelected record.category "Transportation"}}>Transportation</option>
        <option value="Entertainment" {{isSelected record.category "Entertainment"}}>Entertainment</option>
        <option value="Eating Out"{{isSelected record.category "Eating Out"}}> Eating Out </option>
        <option value="Other" {{isSelected record.category "Other"}}>Other</option>
      </select>
      <div class="valid-feedback col-10 p-0">
        The format is correct!
      </div>
      <div class="invalid-feedback col-10 p-0">
        You must choose a category!
      </div>
    </div>
    <div class="form-group row ml-1 mr-4 justify-content-end">
      <label for="amount" class="col-2 col-form-label">Amount</label>
      <input type="number" name="amount" id="amount" class="col-10 form-control" value="{{record.amount}}" min="1"
        max="99999" required>
      <div class="valid-feedback col-10 p-0">
        The format is correct!
      </div>
      <div class="invalid-feedback col-10 p-0">
        An amount less than $100,000 is required!
      </div>
    </div>
    <div class="row ml-1 mr-4">
      <div class="col-2"></div>
      <div class="col-10 p-0 mt-1">
        {{#if record}}
        <input type="submit" value=”sending” class="btn btn-info btn-block">
        {{else}}
        <input type="submit" value="New Expense" class="btn btn-info btn-block">
        {{/if}}
      </div>
    </div>
  </form>
</div>
